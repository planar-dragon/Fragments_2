<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="100dp"
        android:id="@+id/phoneNumberVerificationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="@string/phone_Number_Verification"
        android:gravity="center"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/phoneNumberView"
        android:layout_marginTop="100dp"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="@string/phone_number_input"
        android:gravity="center"
        />

    <Button
        android:id="@+id/phoneDialing"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="@string/phone_Dialing"
        android:gravity="center"
        />
</LinearLayout>