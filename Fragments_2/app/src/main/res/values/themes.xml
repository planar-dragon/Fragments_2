<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fragments_2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <!--     Style ViewPagerFragmentToolBar. -->
    <style name="ToolbarStyle">
        // текст тулбара из ночной темы
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        // стиль применяемый к всплывающему меню
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>

    </style>
</resources>